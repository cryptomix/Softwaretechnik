#include <stdio.h>
#include <ctype.h>


int main()
{
 
char wahl;

do
    {

        printf("A.  Parameter eingeben\n");
        printf("B.  Flaecheninhalt und Winkel berechnen\n");
        printf("C.  Programm beenden\n");
        printf("Ihre Wahl:");
        scanf("%c", &wahl);

        wahl = toupper(wahl);
    } while(!(wahl =='A' || wahl=='B' || wahl=='C'));


        switch(wahl)
        {

        case 'A':

                        printf("Es wurde A ausgewaehlt");
                        break;



        case 'B':

                        printf("Es wurde B ausgewaehlt");
                        break;


        case 'C':

                        printf("Es wurde B ausgewaehlt");
                        break;

        }
}
 



#include<stdio.h>
#include<conio.h>

int main()
{
char ch;
int cho;
clrscr();
do
{
clrscr();
printf("\n *** MAIN MENU *** ");
printf("\n 1 - Option 1 ");
printf("\n 2 - Option 2 ");
printf("\n 3 - Option 3 ");
printf("\n 4 - Exit ");
printf("\n Enter your choice : ");
scanf("%d",&cho);
switch(cho)
{
case 1:
printf("\n You have selected option 1 ");
break;
case 2:
printf("\n You have selected option 2 ");
break;
case 3:
printf("\n You have selected option 3 ");
break;
case 4:
exit(0);
default:
printf("\n Invalid option ! ");
}
printf("\n\n Do you want to continue ? Y - Yes  /  N - No \n");
ch=getch();
}while (ch=='Y' || ch==	'y');
printf("\n Thank you .. ! ");
getch();
return 0;
}


#include <math.h>
#define PI 3.14159265


float alpha, a, n, A;

//Winkel

alpha == ((n - 2)/n)*180;


//Flaecheninhalt

A == (n*a^2)/(4 * tan(PI / n));





